page{
   background: #fff6fb;
}
.bigwrap{
  display: flex;
  flex-direction:column; 
  position: relative;

}

.pink,.white{
  height: 315rpx;
  width: 100%;
  background: #ff7dc3;
}
.white{
  background: #fff6fb;
}
.content{
  display: flex;
  flex-direction: row;
  position: absolute;
  width: 620rpx;
  height: 650rpx;
  margin: 0 auto;
  background: #fff;
  top: 80rpx;
  left: 64rpx;
  flex-wrap: wrap;
  border-radius: 6rpx;
}
.signAmsg{
  width: 300rpx;
  display: flex;
  flex-direction:column; 
  color: #723f42;
  margin-right:50rpx;

}
.content .matchimg{
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin: -27rpx  20rpx 0rpx 25rpx;
}
.sign{
margin:16rpx 0rpx 14rpx 0rpx;
width:100%;
height:auto;
font-size:28rpx;
overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;


}
.msg{
  width: 100%;
  height: auto;
  font-size: 24rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.mysingle{
  width:70rpx;
  height: 70rpx;
  background: #fff;
  border-radius: 1rpx;
  border: 2rpx solid #fe6cb6;
}
.mysingle{
  float: right;
  margin: 18rpx 28rpx 0rpx 0rpx;
}
.singlenum,.singleT{
  text-align: center;
  font-size: 24rpx;
  color: #fe6cb6;
  width:100%;
display:block;


}
.singleT{
    font-size: 18rpx;
}
.singleimg{
  margin-top:20rpx;
  width: 100%;
  height: 438rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
.heartAchat{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  margin-top: 140rpx;
}

.heartAchat image{
width: 50rpx;
height: 50rpx;

}
.heartAchat text{
line-height:50rpx;
color: #fe6cb6;
font-size: 23rpx
}


.heart{
  margin: 0 13rpx 0 215rpx;
}

.vertical{
  margin: 0 62rpx 0 62rpx;
}
.chat{
  margin-right:19rpx; 
}

.shoop{
  width: 275rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #fe6cb6;
  border: 1rpx solid #fff;
  margin: 108rpx auto 0;
  line-height:80rpx;
  color: #fff; 
  box-shadow: rgb(255, 155, 203) 0 6rpx 20rpx 5rpx;
}










































































